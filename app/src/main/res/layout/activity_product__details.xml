<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.itpvt.mohagni.Activities.Product_Details">
    <include layout="@layout/action_bar">    </include>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product Name"
                android:fontFamily="@font/gotham_book"
                android:gravity="center"
                android:textColor="@color/jumbo"
                android:id="@+id/p_name"
                android:padding="5dp"
                android:textColorHint="@color/Mohagni_back"
                android:textSize="28dp"/>
            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center"
                android:id="@+id/p_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:id="@+id/spinners"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="match_parent"
                        android:text="Size"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/Mohagni_back"
                        android:gravity="center_vertical"
                        />
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:fontFamily="@font/gotham_book"
                        android:id="@+id/spinner_size"
                        android:textAlignment="center"
                        >

                    </Spinner>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="70dp"
                        android:fontFamily="@font/gotham_book"
                        android:layout_height="match_parent"

                        android:text="Color"
                        android:textColor="@color/Mohagni_back"
                        android:gravity="center_vertical"
                        />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/gotham_book"
                        android:id="@+id/spinner_color"
                        android:layout_marginLeft="10dp"
                        android:textColor="#0000FF"
                        android:background="@drawable/spinner_back"
                        android:textAlignment="center"
                        android:gravity="center">
                    </Spinner>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"

                android:layout_margin="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham_book"
                    android:id="@+id/tv_qnty"
                    android:gravity="left"
                    android:textColor="@color/jumbo" />

                <EditText
                    android:layout_width="match_parent"
                    android:gravity="left"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/gotham_book"
                    android:hint="1"
                    android:text="1"
                    android:padding="5dp"
                    android:inputType="number"
                    android:id="@+id/ed_qty"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:layout_height="wrap_content"
                android:orientation="horizontal">




            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="5dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/gotham_book"
                        android:gravity="center"
                        android:textColor="@color/Mohagni_back"
                        android:text="Original PKR:"
                        android:textSize="15sp"
                        android:layout_gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/gotham_book"
                        android:id="@+id/tv_price"
                        android:textColor="@color/red"
                        android:textSize="14dp"
                        android:hint="Price"
                        android:layout_gravity="center"
                        android:textColorHint="@color/red" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/Mohagni_back"
                        android:text="Discounted PKR:"
                        android:textSize="15sp"
                        android:layout_gravity="center" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_disprice"
                        android:fontFamily="@font/gotham_book"
                        android:textColor="@color/Mohagni_back"
                        android:textSize="14dp"
                        android:hint="N/A"
                        android:layout_gravity="center"
                        android:textColorHint="@color/Mohagni_back" />
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/buy"
                android:fontFamily="@font/gotham_book"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/Mohagni_back"
                android:textColor="@color/white"
                android:text="Add To Cart"/>
            <!--<Button-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_width="200dp"-->
                <!--android:layout_height="40dp"-->
                <!--android:id="@+id/sizechart"-->
                <!--android:layout_marginBottom="20dp"-->
                <!--android:background="@color/Mohagni_back"-->
                <!--android:textColor="@color/white"-->
                <!--android:text="Size Chart"/>-->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
